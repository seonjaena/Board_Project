<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- doctype선언문은 반드시 위에 설정한 대로 되어 있어야 함 -->

<configuration>
	<!-- 타입 얼라이어스 지정============================ -->
	<typeAliases>
		<typeAlias type="com.sj.spring.vo.UserVo" alias="User" />
		<typeAlias type="com.sj.spring.vo.BoardVo" alias="Board" />
		<typeAlias type="com.sj.spring.vo.CommentVo" alias="Comment" />
		<typeAlias type="com.sj.spring.vo.RecommendationVo" alias="Recommend" />
	</typeAliases>
	<!-- mapper 파일 지정============================= -->
	<mappers>
		<mapper resource="spring/mapper/UserMapper.xml" />
		<mapper resource="spring/mapper/BoardMapper.xml" />
		<mapper resource="spring/mapper/MapMapper.xml" />
	</mappers>
</configuration>